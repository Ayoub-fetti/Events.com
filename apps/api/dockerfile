FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY ../../package*.json ../../

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY . .

# Build the application
RUN npm install -g @nestjs/cli
RUN npm run build

# Expose port
EXPOSE 3000

# Create uploads directory
RUN mkdir -p uploads

# Start the application
CMD ["sh", "-c", "npm run seed:admin && npm run start:prod"]